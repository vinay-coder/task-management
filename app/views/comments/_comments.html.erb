<div class="comment-form" id="comment-form-for-task-<%= task.id %>">
  <%= form_for(task.comments.new, remote: true) do |f| %>
    <%= f.text_field :content, class: 'form-control', placeholder: 'Enter your suggestion...' %>
    <br>
    <%= f.hidden_field :task_id %>
    <%= f.submit 'Submit', class: 'btn btn-primary form-control' %>
  <% end %>
</div>

<div class="comments" id="comments-for-task-<%= task.id %>">
  <% task.comments.order(:created_at).reverse.each do |comment| %>
    <%= render partial: 'comments/comment', locals: {comment: comment} if comment.persisted? %>
  <% end %>
</div>

